<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.csis.lab04.MainActivity">


    <Switch
        android:text="Start/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onOffSwitch"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="72dp" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slider1"
        android:max="5"
        android:layout_below="@+id/onOffSwitch"
        android:layout_alignParentStart="true"
        android:layout_marginTop="34dp" />

    <Switch
        android:text="Start/Stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onOffSwitch2"
        android:layout_centerVertical="true"
        android:layout_alignStart="@+id/onOffSwitch" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="VOLUME COUNTER"
        android:id="@+id/volume"
        android:layout_below="@+id/onOffSwitch2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="24dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="FREQUENCY VOLUME"
        android:id="@+id/frequency"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/slider1"
        android:layout_centerHorizontal="true" />

    <SeekBar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/slider2"
        android:max="5"
        android:layout_below="@+id/volume"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <TextView
        android:text="Microphone"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_below="@+id/slider2"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="28dp" />

    <Switch
        android:text="record"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_alignParentStart="true"
        android:layout_marginStart="11dp"
        android:layout_marginBottom="24dp"
        android:id="@+id/onOffSwitch3" />

    <Switch
        android:text="stop"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onOffSwitch4"
        android:layout_alignBaseline="@+id/onOffSwitch3"
        android:layout_alignBottom="@+id/onOffSwitch3"
        android:layout_alignStart="@+id/textView2" />

    <Switch
        android:text="play"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/onOffSwitch5"
        android:layout_alignBaseline="@+id/onOffSwitch4"
        android:layout_alignBottom="@+id/onOffSwitch4"
        android:layout_alignParentEnd="true"
        android:layout_marginEnd="18dp" />

</RelativeLayout>
